import UIKit

class ViewController: UIViewController {
    
    @IBOutlet var input: UITextField!
    @IBOutlet var output: UILabel!
    
    @IBAction func dectobin(sender: AnyObject) {
        var decimal:Int = Int(input.text!)!
        var temp:Int = decimal
        var tempDec:Int = decimal
        var i:Int=0
        
        var flag:Bool = true
        while(flag){
            temp = decimal%2
            decimal = decimal/2
            i++
            if(decimal==0){
                flag=false
            }
        }
        var result = [Int]();Array(count:i, repeatedValue:0)
        decimal = tempDec
        while i<=0 {
            tempDec = decimal%2
            decimal = decimal/2
            result[i] = tempDec
            i--
            
        }
        //var someInts = [Int]()
        //someInts[0]=temp
